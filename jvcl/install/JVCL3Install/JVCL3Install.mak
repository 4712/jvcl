!ifndef ROOT
ROOT = $(MAKEDIR)\..
!endif

#---------------------------------------------------------------------------------------------------
SRC = ..\..\Run
COM = ..\..\Common
BIN = ..\..\Packages
DCU = ..\..\Dcu
DRC = $&.drc
SRCP = $(SRC);$(COM);$(DCU)
#---------------------------------------------------------------------------------------------------
MAKE = "$(ROOT)\bin\make.exe" -$(MAKEFLAGS) -f$**
DCC  = "$(ROOT)\bin\dcc32.exe" -e"$(BIN)" -i"$(SRCP)" -n"$(DCU)" -r"$(SRCP)" -u"$(SRCP)" -u"$(ROOT)\Lib\Obj" -q -w -h -m
#---------------------------------------------------------------------------------------------------
default: \
JVCL3Install.exe
#---------------------------------------------------------------------------------------------------

JVCL3Install.exe: JVCL3Install.dpr
  $(DCC) $&.dpr

